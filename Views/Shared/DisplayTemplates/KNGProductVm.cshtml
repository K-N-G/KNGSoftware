@model KNGSoftware.Models.ViewModels.Products.KNGProductVm
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2>@Model.Name</h2>
    </div>
    <div class="panel-body">
        <img src="@Model.Image" alt="Image" class="img-thumbnail" width="304" />
    </div>
    @if (User.IsInRole("KNGAdmin"))
    {
        <div class="btn-group-kng">
            <a href="/admin/product/details/@Model.Id" class="btn btn-primary">Details</a>
            <a href="/admin/product/edit/@Model.Id" class="btn btn-primary">Edit</a>
            <a href="/admin/product/delete/@Model.Id" class="btn btn-danger">Delete</a>
        </div>

    }
    else
    {
        <div class="btn-group-kng">
            <a href="/products/details/@Model.Id" class="btn btn-primary">Details</a>
            <a href="/products/get/@Model.Id" class="btn btn-primary">Get</a>
        </div>
    }
</div>





